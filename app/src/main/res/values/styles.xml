<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorAccent</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.Matisse" parent="Matisse.Zhihu">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="toolbar">@style/AppTheme.AppBarOverlay</item>
        <item name="bottomToolbar.apply.textColor">@color/colorAccent</item>
        <item name="item.checkCircle.backgroundColor">@color/colorAccent</item>
        <item name="preview.bottomToolbar.apply.textColor">@color/colorAccent</item>
    </style>
</resources>
